@using System.Web.UI.WebControls
@using hack24.web.Resources
@model ProfileResource
@{
	ViewBag.Title = "Profile";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="profile-head">
	<img class="profile-image" src="@Url.Content("~/Content/images/profile/" + @Model.Primary.ProfileImage + ".jpg")" />

	<h2>@Model.Primary.FirstName @Model.Primary.LastName</h2>
	<p>@Model.Primary.JobTitle</p>
</div>
<div class="alternatives">
	<div class="row">

		<div class="col-xs-4">
			<img class="profile-image" src="@Url.Content("~/Content/images/profile/" + @Model.LineManager.ProfileImage +".jpg")" />
			<b><a href="@Url.Action("View", "Profile", new { Model.LineManager.Id })">@Model.LineManager.FirstName @Model.LineManager.LastName</a></b>
			is my line manager
		</div>

		<div class="col-xs-4">
			<img class="profile-image" src="@Url.Content("~/Content/images/profile/" + @Model.HolidayApprover.ProfileImage +".jpg")" />
			<b><a href="@Url.Action("View", "Profile", new { Model.HolidayApprover.Id })">@Model.HolidayApprover.FirstName @Model.HolidayApprover.LastName</a></b>
			approves holidays
		</div>

		<div class="col-xs-4">
			<img class="profile-image" src="@Url.Content("~/Content/images/profile/" + @Model.PayManager.ProfileImage +".jpg")" />
			<b><a href="@Url.Action("View", "Profile", new { Model.PayManager.Id })">@Model.PayManager.FirstName @Model.PayManager.LastName</a></b>
			handles payroll
		</div>

	</div>
</div>

<h3 style="text-align: center;">Tags</h3>
<div class="col-xs-12">
	@foreach (var tag in Model.Primary.Tags) {
		<div class="skill-tag">@tag.DisplayName</div>
	}
</div>


