@using hack24.web.Resources
@model ProfileResource
@{
	ViewBag.Title = "Profile";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Profile</h2>

<img src="~/Images/ProfileImages/@Model.ProfileImage"/>
<h3>Name</h3>
<p>@Model.FirstName @Model.LastName</p>
<h3>Job Title</h3>
<p>@Model.JobTitle</p>
<h3>Bio</h3>
<p>@Model.Bio</p>

<h3>Tags</h3>
<div class="col-xs-12">
	@foreach (var tag in Model.Tags)
	{
		<div class="skill-tag">@tag.DisplayName</div>
	}
</div>