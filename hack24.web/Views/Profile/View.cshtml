@using hack24.web.Resources
@model ProfileResource
@{
	ViewBag.Title = "Profile";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<img class="profile-image" src="@Url.Content("~/Content/images/profile/" + Model.Primary.ProfileImage + ".jpg")" />

<h2>@Model.Primary.FirstName @Model.Primary.LastName</h2>
<p>@Model.Primary.JobTitle</p>
<h3>Bio</h3>
<p>@Model.Primary.Bio</p>

<h3 style="margin-bottom: 30px;">Get in touch with @Model.Primary.FirstName</h3>
<button class="action-button">Drink Later?</button>
<hr />
<button class="action-button">Lunch?</button>
<hr/>
<button class="action-button">Meeting</button>

<h3>Tags</h3>
<div class="col-xs-12">
	@foreach (var tag in Model.Primary.Tags) {
		<div class="skill-tag">@tag.DisplayName</div>
	}
</div>


<hr/>
@if (Model.Alternatives.Any()) {
	<div class="alternatives">
		<div class="row">
			@foreach (var alt in Model.Alternatives) {
				<div class="col-xs-6">
					<img class="profile-image" src="@Url.Content("~/Content/images/profile/" + alt.ProfileImage + ".jpg")" />

					<b><a href="@Url.Action("View","Profile",new {alt.Id})">@alt.FirstName @alt.LastName</a></b>
				</div>
			}
		</div>
	</div>
}